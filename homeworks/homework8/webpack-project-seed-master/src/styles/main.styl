@import "variables.styl"

.section
  margin 1rem auto
  box-sizing border-box
  position relative
  &-cropped
    max-width 1350px
    background-color $globalBlockBGColorGray
    margin 2rem auto
    &-description
      display flex
      justify-content center
      flex-direction column
      align-items stretch
      text-align left
      &-block
        width 80%
        margin 0 auto
      &-title
        font-size 3.5rem
  &-two-column
    background-color white


  &-description-ios
    text-align center
    &-title
      font-size 2.5rem
    &-text
      font-size 1.4rem
      margin 2rem 0
  &-content
      display flex
      justify-content center
      text-align center
      &-description
        margin-top 4rem
        font-size 2rem
        &__link
          font-size 1.4rem
  &-iphone-x
    background-color $globalBlockBGColorGray
    &__img
      margin 3rem auto
      height 12rem
  &-iphone-8
    background-color $globalBlockBGColorPink
    &__img
      height 30rem
  &-ios__img
    height 30rem
    margin 3rem 0
  &-airpods
    background-image url(../assets/images/airpods_large_2x.jpg)
    position absolute
    height 80%
    background-size auto 35rem
    background-repeat no-repeat
    width 100%
    bottom 0
